<script>
  function sparkleUUID() {
    return 'xxxxxxxxxxxx4xxxyxxxxxxxxxxxxxxx'.replace(/[xy]/g, function (c) {
      const r = Math.random() * 16 | 0;
      const v = c === 'x' ? r : (r & 0x3 | 0x8);
      return v.toString(16);
    });
  }
</script>
<script>
  let uid = localStorage.getItem("sparkleUserId");
  if (!uid || uid === "null" || uid === "undefined") {
    uid = sparkleUUID();
    localStorage.setItem("sparkleUserId", uid);
  }
  window.sparkleUserId = uid;
</script>


